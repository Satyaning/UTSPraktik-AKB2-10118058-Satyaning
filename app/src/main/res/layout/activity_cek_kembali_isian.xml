<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CekKembaliIsian">

    <TextView
        android:id="@+id/labelNik"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/FieldlNik"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/labelNik"/>
    <TextView
        android:id="@+id/labelNama"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/FieldlNik"/>
    <TextView
        android:id="@+id/fieldNama"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/labelNama"/>
    <TextView
        android:id="@+id/fieldAge"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/fieldNama"/>
    <TextView
        android:id="@+id/fieldAge1"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/fieldAge"/>
    <TextView
        android:id="@+id/labelPilihGender"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/fieldAge1"/>
    <TextView
        android:id="@+id/fieldPilihGender"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/labelPilihGender"/>
    <TextView
        android:id="@+id/labelHubungan"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/fieldPilihGender"/>
    <TextView
        android:id="@+id/fieldHubungan"
        style="@style/Theme.UTSPraktikakb210118058SatyaningAndaru.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        app:layout_constraintTop_toBottomOf="@id/labelHubungan"/>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:text="Simpan"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintBottom_toTopOf="@+id/btnUbah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnUbah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="prev"
        android:text="Ubah"
        android:theme="@style/ThemeOverlay.AppCompat.Light"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>